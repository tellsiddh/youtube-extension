{
  "manifest_version": 3,
  "name": "YouTube Analytics Fetcher",
  "version": "1.0",
  "description": "Fetches YouTube video analytics from the current tab URL",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
