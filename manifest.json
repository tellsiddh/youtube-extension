{
  "manifest_version": 3,
  "name": "YouTube Analytics Fetcher",
  "version": "1.0",
  "description": "Fetches YouTube video analytics from the current tab URL",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}